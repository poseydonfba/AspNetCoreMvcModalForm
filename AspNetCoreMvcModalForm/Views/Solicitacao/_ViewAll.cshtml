@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgeryProvider
@model IEnumerable<AspNetCoreMvcModalForm.Business.Models.Solicitacao>

@{ Layout = null; }

<vc:summary></vc:summary>

<div class="row">
    <div class="col-md-6"><h1>Solicitações</h1></div>
    <div class="col-md-6 text-end"><a onclick="jQueryModalGet(this, '@Url.Action("Create", "Solicitacao")', 'Nova solicitação', 'modalSolicitacao')" class="btn btn-outline-dark btn-sm"><i class="fas fa-random"></i> Nova solicitação</a></div>
</div>

<table class="table table-striped table-sm table-hover" id="tableSolicitacao" style="width:100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoSolicitacaoId)
            </th>
            <th></th>
        </tr>
    </thead>
</table>